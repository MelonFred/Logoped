<div class="task_block">
<h2>Список Ваших занятий:</h2>
<% 
@lessons.each { |value| 
@lesson = Lesson.find(value.lesson_id)
%>
    <%= form_tag url_for(controller: "client_page", action: "user_lesson", id: @lesson.id), method: "get", id: "form_id" do %>
    <div class="task" id="task">
        <% if @lesson.title.size > 100 %>
            <p class="task_title"><%= @lesson.title[0,100] %>...</p>
        <% else %>
            <p class="task_title"><%= @lesson.title %></p>
        <% end %>
    </div>         
    <% end %>
<% } %>
</div>